---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Bagde from '../components/Bagde.astro';
import profileImg from '../assets/profile.jpg';
import Github from '../icons/Github.astro';
import LinkedIn from '../icons/LinkedIn.astro';	
import Gmail from '../icons/Gmail.astro';
import Socialpill from '../components/Socialpill.astro';
import Experiences from '../components/Experiences.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Work from '../icons/Work.astro';
import Vs from '../icons/Vs.astro';
import Projects from '../components/Projects.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="Porfolio Alejandro Dev">

	<main class="w-full mx-auto flex flex-col items-center lg:items-start">
		<SectionContainer class = "py-20 md:py-32 lg:py-44 pb-16 md:pb-24 lg:pb-32">
		<div class="flex flex-col items-center lg:items-start w-full">
		<img 
   	 	class ="rounded-full w-20 h-20 md:w-24 md:h-24 mb-6"
    	src={profileImg.src}    
    	alt="my photo profile"
     />
		<h1 data-i18n="hero.greeting" class="text-white text-2xl md:text-3xl lg:text-5xl font-bold flex flex-col md:flex-row gap-3 md:gap-x-4 pb-4 md:pb-6 lg:pb-10 text-center md:text-left items-center md:items-start w-full justify-center lg:justify-start">
			Hey, I'm Alejandro am  Developer from sotware in Colombia'
			<a href="https://example.com" target="_blank" 
			rel="noopener" 
			class = "flex justify-center items-center"
			 ><Bagde data-i18n="hero.available"> Available for hire</Bagde></a>
		</h1>
		<h2 data-i18n="hero.description" class = "text-base md:text-lg lg:text-xl text-wrap max-w-[700px] text-center md:text-left leading-relaxed w-full">
			i have with experience in <span class = "opacity-80">Freelances</span> approximately 1 year <br class="hidden md:block">
			 as you <span class="text-purple-600/90">Developer Mobile</span> and <span class="text-purple-600/90"> Web</span> with Technologies like
		</h2>
		</div>

		<nav class="flex gap-3 md:gap-4 mt-6 md:mt-8 flex-wrap justify-center md:justify-start">
			<Socialpill href="https://github.com">
				<Github class="size-4 md:size-5"/>
				GitHub
			</Socialpill>
			<Socialpill href="https://linkedin.com">
				<LinkedIn class="size-4 md:size-5"/>
				LinkedIn
			</Socialpill>

			<Socialpill href="https://gmail.com">
				<Gmail class="size-4 md:size-5"/>
				<span class="hidden sm:inline">Developer@gmail.com</span>
				<span class="sm:hidden">Email</span>
			</Socialpill>
				
			

		</nav>
			
		
	</SectionContainer>
	
	<SectionContainer id ="experience" class="flex flex-col items-center lg:items-start w-full">
		<h2 data-i18n="sections.experience" class = "text-xl md:text-2xl lg:text-3xl font-semibold mb-6 md:mb-8 text-center md:text-left flex items-center gap-2 w-full justify-center lg:justify-start">
			Experiences Work
		 <Work class="w-6 h-6 md:w-8 md:h-8"/>
		</h2>
	<Experiences />
	</SectionContainer>

		<SectionContainer id ="projects" class="flex flex-col items-center lg:items-start w-full">
		<h2 data-i18n="sections.projects" class = "text-xl md:text-2xl lg:text-3xl font-semibold mb-6 md:mb-8 text-center md:text-left flex items-center gap-2 w-full justify-center lg:justify-start">
			my Projects
		 <Vs class="w-6 h-6 md:w-8 md:h-8"/>
		</h2>
	<Projects />
	</SectionContainer>

	</main>


</Layout>
